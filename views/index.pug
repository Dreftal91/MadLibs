extends layout

block content
  h1 Enter Your Words
  form(method ="POST" action="/story" id="words")
    label(for="noun1") Noun:
    input(type="text" name="noun1" value="cat" id="noun1")
    br
    label(for="noun2") Noun:
    input(type="text" name="noun2" value="bicycle" id="noun2")
    br
    label(for="verb1") Verb (ending in ed):
    input(type="text" name="verb1" value="whispered" id="verb1")
    br
    label(for="verb2") Verb (ending in ed):
    input(type="text" name="verb2" value="danced" id="verb2")
    br
    label(for="adjective1") Adjective:
    input(type="text" name="adjective1" value="mysterious" id="adjective1")
    br
    label(for="adjective2") Adjective:
    input(type="text" name="adjective2" value="sparkling" id="adjective2")
    br
    label(for="storyChoice") Choose One:
    select(form="words" name="storyChoice" id="storyChoice")
      option(value = "1") Story 1
      option(value = "2") Story 2
      option(value = "3") Story 3
      option(value = "Random") Random Story
    br
    button(type="submit" form="words") Tell me a Story